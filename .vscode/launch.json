{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python",
            "type": "python",
            "pythonPath": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/manage.py",
            "args": [
                "runserver"
            ],
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]
}